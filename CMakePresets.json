{
  "version": 2,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/Scratch",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "unix-debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "unix-release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc",
      "inherits": "base",
      "generator": "Visual Studio 17",
      "cacheVariables": {
      }
    }
  ]
}
